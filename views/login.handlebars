<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img
          src="/img/login_img.png"
          class="img-fluid w-100 mt-5"
          alt="drawing of woman working from home"
        />
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form action="/auth/login" method="POST">
          <div
            class="d-flex flex-row align-items-center justify-content-center"
          >
            <p class="fs-3 fw-normal mb-0 me-3">
              It's Good to See You!</p>
          </div>
          <div class="divider d-flex align-items-center my-3"></div>
          <div data-mdb-input-init class="form-outline mb-2">
            <input
              type="email"
              id="userEmail"
              class="form-control form-control-md"
              name="email"
              placeholder="Email"
              required
            />
            <label class="form-label" for="userEmail"></label>
          </div>
          <div data-mdb-input-init class="form-outline mb-2">
            <input
              type="password"
              id="userPassword"
              class="form-control form-control-md"
              name="password"
              placeholder="Password"
              required
            />
            <label class="form-label" for="userPassword"></label>
          </div>
          <div class="text-center text-md-start mt-4 pt-2">
            <button
              type="submit"
              data-mdb-button-init
              data-mdb-ripple-init
              class="btn btn-primary btn-md"
              style="padding-inline: 1.5rem;"
            > Login </button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?
              <a href="/auth/register" class="link-danger"> Register </a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>